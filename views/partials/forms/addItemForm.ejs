<form id="itemForm" action="/items" method="POST" class="hidden">
  <h3>Add New Item</h3>
  <input type="text" name="name" placeholder="Item Name" required />
  <input type="text" name="details" placeholder="Details" />
  <input type="number" name="amount" placeholder="Amount" required min="0" />

  <input type="number" name="price" placeholder="Price" step="0.01" min="0" />
  <select name="categoryId" required>
    <option value="">Select Category</option>

    <!-- Static fallback option -->
    <option value="1">Laptops</option>

    <% if (typeof categories !== "undefined" && categories) { %> <%
    categories.forEach(cat => { %>
    <option value="<%= cat.id %>"><%= cat.name %></option>
    <% }) %> <% } %>
  </select>

  <button type="submit">Add Item</button>
</form>
