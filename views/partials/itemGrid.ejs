<section class="grid">
  <h2>Items</h2>
  <% if (items.length === 0) { %>
  <p>No items found.</p>
  <% } else { %>
  <div class="item-list">
    <% items.forEach(item => { %>
    <div class="item-card">
      <h3><%= item.name %></h3>
      <p><%= item.details %></p>
      <p><strong>Amount:</strong> <%= item.amount %></p>
    </div>
    <% }) %>
  </div>
  <% } %>
</section>
