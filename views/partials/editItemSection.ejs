<form class="item-form" method="POST" action="<%= formAction %>"  enctype="multipart/form-data">
  <div class="item-image-wrapper">
    <img 
      src="<%= item.imageUrl || '/images/placeholder.jpeg' %>" 
      alt="<%= item.name + ' image' %>" 
      class="item-image"
    />

    <label for="imageUpload" class="image-edit-button" title="Change image">
      🖼️
    </label>
    <input
      type="file"
      id="imageUpload"
      name="image"
      accept="image/*"
      class="image-upload-input"
    />
  </div>

<article class="item-edit-fields">
  <div class="field-row">
    <label for="name">Name:</label>
    <input id="name" class="item-edit-title" type="text" name="name" value="<%= item.name || '' %>" required />
  </div>

  <div class="field-row">
    <label for="details">Details:</label>
    <input id="details" class="item-edit-description" type="text" name="details" value="<%= item.details || '' %>" />
  </div>

  <div class="field-row">
    <label for="amount">Amount:</label>
    <input id="amount" class="item-edit-stock" type="number" name="amount" min="0" value="<%= item.amount || 0 %>" />
  </div>

  <div class="field-row">
    <label for="price">Price:</label>
    <input id="price" class="item-edit-price" type="number" name="price" step="0.01" value="<%= item.price || '' %>" />
  </div>
  
  <div class="field-row">
    <label for="category">Category:</label>
    <select id="category" name="categoryId" class="item-edit-category">
      <% categories.forEach((cat) => { %>
        <option value="<%= cat.id %>" <%= item.categoryId === cat.id ? "selected" : "" %>>
          <%= cat.name %>
        </option>
      <% }); %>
    </select>
  </div>
</article>


  <button type="submit" class="item-page-buttons edit-button">💾 Save Changes</button>
</form>
