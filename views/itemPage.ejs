<%- include('./partials/header.ejs') %>

<main class="item-details">
  <div class="item-card">
    <img
      src="<%= item.image_url || '/images/placeholder.jpeg' %>"
      alt="<%= item.name %>"
      class="item-image"
    />
    <div class="item-info">
      <h2><%= item.name %></h2>
      <p><strong>Details:</strong> <%= item.details || 'No details' %></p>
      <p><strong>Amount:</strong> <%= item.amount %></p>
      <% if (item.price !== null) { %>
      <p><strong>Price:</strong> $<%= item.price.toFixed(2) %></p>
      <% } %>
      <p><strong>Category ID:</strong> <%= item.category_id %></p>
    </div>
  </div>

  <div class="edit-button">
    <form action="/items/<%= item.id %>/edit" method="GET">
      <button type="submit">Edit Item</button>
    </form>
  </div>
</main>

<%- include('./partials/footer.ejs') %>
